        $(document).ready(function() {
            loadMailList("sherman@zahavas.com");
        });

        function loadMailList (strEmail) {
            let PageNo = $('input[name="PageNo"]').val();
            let Type = $('input[name="Type"]').val();

            $.post('/home/GetMailList', { strEmail, PageNo, Type }, function (data) {
                try {
                    $('#email_list').html(data);
                } catch (e) {
                    console.log(e);
                } finally {
                }
            }, 'html');
        }

        function handleListClick(element) {
            const content = element.textContent;
            $('input[name="selectedEmail"]').val(content);
            loadMailList(content);
        }

        function handlePrevPage() {
            let PageNo = $('input[name="PageNo"]').val();
            PageNo--;
            if (PageNo < 1) PageNo = 1;
            $('input[name="PageNo"]').val(PageNo);
            const strMail = $('input[name="selectedEmail"]').val();
            loadMailList(strMail);
        }

        function handleNextPage() {
            let PageNo = $('input[name="PageNo"]').val();
            PageNo++;
            $('input[name="PageNo"]').val(PageNo);
            const strMail = $('input[name="selectedEmail"]').val();
            loadMailList(strMail);
        }

    </script>
