<!doctype html>
<html lang="en">

<head runat="server">
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="HandheldFriendly" content="True" />
    <meta name="MobileOptimized" content="320" />
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=0.5, maximum-scale=1.0, user-scalable=no" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <meta name="description" content="attentify.io | Setting new standards for customer experience" />
    <meta name="keywords" content="attentify.io | Setting new standards for customer experience" />
    <meta name="author" content="attentify.io" />

    <link rel="shortcut icon" type="image/x-icon" href="~/assets/content/img/logo.png" />
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="~/assets/content/img/apple-touch-icon-114x114-precomposed.png" />
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="~/assets/content/img/apple-touch-icon-72x72-precomposed.png" />
    <link rel="apple-touch-icon-precomposed" href="~/assets/content/img/apple-touch-icon-precomposed.png" />
    <link rel="apple-touch-icon" href="~/assets/content/img/apple-touch-icon.png" />
    <link rel="stylesheet" href="~/assets/scripts/lib/kendoui/styles/kendo.common-material.min.css" />
    <link rel="stylesheet" href="~/assets/scripts/lib/kendoui/styles/kendo.material.min.css" />
    <title>Attentify</title>
    <link href="~/assets/bundles/css/aurora.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/assets/bundles/css/nonphone.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/assets/bundles/css/global.css" rel="stylesheet" />
    @if (ViewBag.styles != null)
    {
        foreach (string strScripts in ViewBag.styles)
        {
            <link href="@strScripts" rel="stylesheet">
        }
    }


    <style>
        @@-moz-document url-prefix() {
            .search_conversations input[type="search"] {
            width: 272px;
            height: 27px;
            }
        }
    </style>
    </head>

<body ng-app="AgentDesktop">
  <div class="agentdesktop">
    <div class="dashboard en p319 z50">
      <div id="tabs" class="ui-tabs ui-widget ui-widget-content ui-corner-all">
        @{
            Html.RenderPartial("Header");
        }

        @RenderBody();
            
      </div>
    </div>
  </div>
  <script src="~/assets/scripts/jquery-1.9.1.min.js"></script>
  <script src="~/assets/scripts/jquery-ui-1.9.1.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@@microsoft/signalr@6.0.0/dist/browser/signalr.min.js"></script>
  <script src="~/assets/scripts/attentify.js"></script>
  
    <script>
        $(document).ready(function () {
            attentify.init();
            $(window).resize();
        });
    </script>
    @foreach (string strScripts in ViewBag.scripts)
    {
        <script src=@strScripts></script>
    }
    
</body>
</html>
